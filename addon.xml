<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.rssalternative"
       name="RSS-Alternative"
       version="0.2.0"
       provider-name="squisher">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">RSS-Alternative</summary>
    <description lang="en">Play audio from a RSS stream with resume support</description>
  </extension>
</addon>
